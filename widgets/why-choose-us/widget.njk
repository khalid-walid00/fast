<section class="py-16">
  <div class="container">
    <div class="section-title-container">
      <h2 class="section-title">{{ widget.settings.section_title or 'لماذا تختارنا' }}</h2>
    </div>
    {% set features = (widget.blocks and widget.blocks.featureItem) or [] %}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
      {% for f in features %}
      <div class="reason-card border rounded-2xl p-10 text-center shadow-sm border-gray-300">
        <div class="flex justify-center mb-4">
          {% if f.settings and f.settings.icon and f.settings.icon.fileUrl %}
          <img src="{{ f.settings.icon.fileUrl }}" alt="[{{ f.settings.alt or f.settings.title or 'Icon' }}]" class="w-16 h-16 object-contain">
          {% endif %}
        </div>
        <h3 class="text-2xl font-extrabold mb-3 text-gray-800">{{ f.settings.title }}</h3>
        <p class="text-gray-600 leading-relaxed">{{ f.settings.description }}</p>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

