<!-- Features Section -->
<section class="pt-0 md:pt-0 pb-12 md:pb-16 bg-white">
  <div class="container flex flex-col md:gap-10 gap-4">
    <div class="section-title-container">
      <h2 class="section-title">{{ t('why_choose_us') }}</h2>
    </div>

    {% if widget.blocks.length > 0 %}
    {% set featureTitleKeys = ['guaranteed_quality','free_shipping_feature','premium_customer_support'] %}
    {% set featureDescKeys = ['guaranteed_quality_description','free_shipping_feature_description','customer_support_description'] %}
    {% set featureAltKeys = ['quality_alt','shipping_alt','support_alt'] %}
    <div class="grid grid-cols-3 md:gap-5 gap-2">
      {% for block in widget.blocks %}
      <div class="reason-card border rounded-xl md:py-[60px] p-1.5 md:px-9 {% if t('dir') == 'rtl' %}text-center{% else %}text-center{% endif %} shadow-sm border-stok">
        <div class="flex flex-col items-center justify-center md:gap-3 gap-1">
          <div class="flex flex-col items-center justify-center gap-1">
            {% if block.data.icon and block.data.icon.fileUrl %}
            <img src="{{ block.data.icon.fileUrl }}" alt="{{ t(featureAltKeys[loop.index0] or 'icon_alt_text') }}"
              class="md:w-8 md:h-8 w-4 h-4 object-contain" />
            {% elif block.data.icon_name %}
            <span class="material-symbols-outlined md:text-[32px] text-base primary-orange-text">{{ block.data.icon_name }}</span>
            {% else %}
            <div class="md:w-8 md:h-8 w-4 h-4 bg-gray-200 rounded-full flex items-center justify-center">
              <span class="text-2xl text-gray-400">‚≠ê</span>
            </div>
            {% endif %}
            {% set featureTitle = block.data.title or '' %}
            {% if not featureTitle %}{% set featureTitle = t(featureTitleKeys[loop.index0] or 'feature_title') %}{% endif %}
            <h3 class="md:text-[32px] text-[10px] md:leading-[52px] leading-[12px] font-medium  text-secondary">{{ featureTitle | safe }}</h3>
          </div>
          {% set featureDesc = block.data.description or '' %}
          {% if not featureDesc %}{% set featureDesc = t(featureDescKeys[loop.index0] or 'feature_description') %}{% endif %}
          <p class="text-gray md:text-base text-[10px] leading-[12px] text-gray md:leading-relaxed">{{ featureDesc | safe }}</p>
        </div> 
      </div>
      {% endfor %}
    </div>
    {% endif %}
  </div>
</section>