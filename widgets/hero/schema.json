{
  "name": "قسم الهيرو الرئيسي",
  "description": "قسم الهيرو الرئيسي مع التخطيط المقسم (نص وصورة)",
  "settings": {
    "enable_swiper": {
      "type": "checkbox",
      "label": "تفعيل السلايدر",
      "default": true
    },
    "autoplay_delay": {
      "type": "number",
      "label": "مدة الانتظار بين الشرائح (بالثواني)",
      "default": 5
    },
    "show_navigation": {
      "type": "checkbox",
      "label": "إظهار أزرار التنقل",
      "default": false
    },
    "show_pagination": {
      "type": "checkbox",
      "label": "إظهار نقاط التنقل",
      "default": true
    }
  },
  "blocks": {
    "slideItem": {
      "name": "شريحة الهيرو",
      "settings": {
        "image": {
          "type": "media",
          "label": "صورة الهيرو",
          "info": "اختر صورة عالية الجودة للهيرو",
          "default": ""
        },
        "alt": {
          "type": "string",
          "label": "النص البديل للصورة",
          "default": "hero_image_alt"
        },
        "title": {
          "type": "text",
          "label": "العنوان الرئيسي",
          "default": "hero_title_default",
          "info": "يمكن استخدام <br> لتقسيم النص على أسطر"
        },
        "subtitle": {
          "type": "text",
          "label": "النص الفرعي",
          "default": "hero_subtitle_default",
          "info": "يمكن استخدام <br> لتقسيم النص على أسطر"
        },
        "button_text": {
          "type": "string",
          "label": "نص الزر",
          "default": "hero_button_text_default"
        },
        "link": {
          "type": "url",
          "label": "رابط الزر",
          "default": "/collections"
        },
        "text_section_background_color": {
          "type": "color",
          "label": "لون خلفية قسم النص",
          "default": "#B9C1B6"
        }
      }
    }
  },
  "presets": [
    {
      "name": "الهيرو الأساسي",
      "settings": {
        "enable_swiper": true,
        "autoplay_delay": 5,
        "show_navigation": false,
        "show_pagination": true
      },
      "blocks": [
        {
          "block": "slideItem",
          "name": "الهيرو الأول",
          "settings": {
            "title": "اساس انيق لمنزلك<br>والعصري",
            "subtitle": "اكتشف تشكيلتنا الواسعة من الأثاث<br>بتصاميم عصرية وجودة عالية",
            "button_text": "تسوق الآن",
            "link": "/collections",
            "text_section_background_color": "#B9C1B6"
          }
        },
        {
          "block": "slideItem",
          "name": "الهيرو الثاني",
          "settings": {
            "title": "عروض حصرية<br>لفترة محدودة",
            "subtitle": "خصومات تصل إلى 50%<br>على منتجات مختارة",
            "button_text": "تسوق الآن",
            "link": "/latest",
            "text_section_background_color": "#D9B297"
          }
        },
        {
          "block": "slideItem",
          "name": "الهيرو الثالث",
          "settings": {
            "title": "جودة مضمونة<br>ومتانة تدوم",
            "subtitle": "منتجات عالية الجودة<br>مع ضمان شامل",
            "button_text": "تسوق الآن",
            "link": "/collections",
            "text_section_background_color": "#B9C4CB"
          }
        }
      ]
    }
  ]
