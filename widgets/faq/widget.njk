<!-- FAQ Section -->
<section class="py-16 bg-gray-50">
  <div class="container">
    <div class="section-title-container">
      <h2 class="section-title">{{ widget.data.title | default('الأسئلة الشائعة') }}</h2>
    </div>
    
    {% if widget.blocks.length > 0 %}
      <div class="space-y-4">
        {% for block in widget.blocks %}
        <div class="border rounded-lg bg-white overflow-hidden">
          <details>
            <summary class="font-semibold text-lg cursor-pointer flex justify-between items-center p-4">
              {{ block.data.question }}
              <span class="material-symbols-outlined faq-arrow transform duration-200">add</span>
            </summary>
            <p class="p-4 pt-0 text-gray-600">{{ block.data.answer }}</p>
          </details>
        </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

