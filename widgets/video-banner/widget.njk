<section class="video-banner py-16 sm:py-20 rounded-2xl overflow-hidden relative">
  <div class="absolute inset-0 z-0">
    <video class="absolute top-0 left-0 w-full h-full object-cover" preload="auto" autoplay muted playsinline loop>
      <source src="{{ widget.data.video_url.fileUrl }}" type="video/mp4">
    </video>
  </div>
  <div class="container mx-auto px-6">
    <div class="text-center py-14 sm:py-20 relative z-10">
      <h2 class="text-white font-extrabold leading-tight text-[28px] sm:text-[42px] md:text-[56px] mb-8">
        {{ widget.data.default_title | default('شاهد كيف تصنع الفرق') }}<br>
        {{ widget.data.default_subtitle| default('في منزلك') }}
      </h2>
      <button class="video-toggle w-20 h-20 sm:w-24 sm:h-24 bg-white rounded-full flex items-center justify-center mx-auto ring-4 ring-white/30 shadow-lg hover:scale-105 transition-transform">
        <span class="material-symbols-outlined text-5xl sm:text-6xl" style="color:#F59A57" data-icon>pause</span>
      </button>
    </div>
    
  </div>

</section>
