<section class="video-banner-full py-8">
  <div class="video-container">
    <!-- الفيديو كخلفية -->
    <video class="video-background" preload="auto" autoplay muted playsinline loop>
      <source src="{{ widget.data.video_url.fileUrl }}" type="video/mp4">
    </video>
    
    <!-- Overlay داكن -->
    <div class="video-overlay"></div>
    
    <!-- {% if t('dir') == 'rtl' %}النص في الزاوية العلوية اليمنى{% else %}Text in the top left corner{% endif %} -->
    <div class="video-text-banner">
      <h2 class="video-title {% if t('dir') == 'ltr' %}text-left{% else %}text-right{% endif %}">
        {{ t('default_title_text') }}
      </h2>
    </div>
    
    <!-- زر التشغيل في المنتصف -->
    <div class="video-play-container">
      <button class="video-play-button">
        <span class="play-icon"></span>
      </button>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const video = document.querySelector('.video-background');
  const playButton = document.querySelector('.video-play-button');
  const playIcon = document.querySelector('.play-icon');
  
  if (video && playButton) {
    let isPlaying = true;
    
    playButton.addEventListener('click', function() {
      if (isPlaying) {
        video.pause();
        // أيقونة الإيقاف (خطين عموديين)
        playIcon.style.border = 'none';
        playIcon.style.width = '20px';
        playIcon.style.height = '20px';
        playIcon.style.position = 'relative';
        playIcon.style.display = 'flex';
        playIcon.style.alignItems = 'center';
        playIcon.style.justifyContent = 'center';
        playIcon.innerHTML = '';
        playIcon.style.backgroundImage = 'linear-gradient(to right, #F59A57 0%, #F59A57 30%, transparent 30%, transparent 70%, #F59A57 70%, #F59A57 100%)';
        playIcon.style.backgroundSize = '100% 16px';
        playIcon.style.backgroundRepeat = 'no-repeat';
        playIcon.style.backgroundPosition = 'center';
        playIcon.style.marginLeft = '0';
        isPlaying = false;
      } else {
        video.play();
        // أيقونة التشغيل (مثلث)
        playIcon.style.border = 'none';
        playIcon.style.width = '0';
        playIcon.style.height = '0';
        playIcon.style.borderLeft = '20px solid #F59A57';
        playIcon.style.borderTop = '12px solid transparent';
        playIcon.style.borderBottom = '12px solid transparent';
        playIcon.style.marginLeft = '4px';
        playIcon.style.backgroundImage = 'none';
        playIcon.style.backgroundSize = 'none';
        playIcon.style.backgroundRepeat = 'none';
        playIcon.style.backgroundPosition = 'none';
        playIcon.innerHTML = '';
        isPlaying = true;
      }
    });
  }
});
</script>
