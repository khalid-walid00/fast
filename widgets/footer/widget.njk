<footer class="text-white bg-[#333333] md:pt-[41px] md:pb-[45px] pt-6 pb-8 mt-6 md:mt-10">
  <div class="container grid md:grid-cols-3 grid-cols-1 md:gap-8 gap-6">
    <div class="flex flex-col gap-5">
      {% if globals.app.logo.fileUrl %}
      <img src="{{ globals.app.logo.fileUrl }}" class="md:w-[112px] w-[88px] md:h-[96px] h-[76px] " alt="">
      {% else %}
      <span class=" text-white font-bold text-xl tracking-wider ">{{globals.app.name}}</span>
      {% endif %}
      <p class=" text-sm leading-[20px] max-md:text-xs">
        {{ t(widget.data.company_description) | default(t('company_description_default')) }}
      </p>
    </div>
    <div class="flex flex-col gap-4">
      <h3 class="font-semibold text-xl leading-6">{{t('quick_links')}}</h3>
      <nav class="flex flex-col gap-2">
        {% set items = widget.data.footer_menu or [] %}
        {% for item in items %}
        <a href="{{ item.url | default('#') }}" class="leading-5 max-md:text-xs hover:text-primary transition-colors duration-200">{{ t(item.title | default('no_title')) }}</a>
        {% endfor %}
      </nav>
    </div>
    <div class="flex flex-col gap-4">
      <h3 class="font-semibold text-xl leading-6">{{t('categories')}}</h3>
      <nav class="grid grid-cols-2 gap-y-[10px] gap-x-3">
        {% set items = widget.data.footer_menu or [] %}
        {% for item in items %}
        <a href="{{ item.url | default('#') }}" class="leading-5 max-md:text-xs hover:text-primary transition-colors duration-200">{{ t(item.title | default('no_title')) }}</a>
        {% endfor %}
      </nav>
      {# Social links moved here under sections #}
      {% set facebook = widget.data.facebook_link %}
      {% set instagram = widget.data.instagram_link %}
      {% set youtube = widget.data.youtube_link %}
      {% set xlink = widget.data.x_link %}
      {% if (facebook and facebook != '#') or (instagram and instagram != '#') or (youtube and youtube != '#') or (xlink and xlink != '#') %}
      <div class="flex items-center gap-3 mt-3">
        <span class="text-sm whitespace-nowrap">تابعنا على</span>
        <div class="flex items-center gap-2">
          {% if facebook and facebook != '#' %}
          <a href="{{ facebook }}" target="_blank" rel="noopener" class="inline-flex items-center justify-center w-7 h-7 rounded-full bg-white/10 hover:bg-white/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-white"><path d="M22 12.06C22 6.49 17.52 2 11.94 2S2 6.49 2 12.06c0 5 3.66 9.15 8.44 9.94v-7.03H7.9v-2.91h2.54V9.41c0-2.5 1.49-3.89 3.77-3.89 1.09 0 2.23.2 2.23.2v2.45h-1.26c-1.24 0-1.63.77-1.63 1.56v1.87h2.77l-.44 2.91h-2.33V22c4.78-.79 8.44-4.94 8.44-9.94Z"/></svg>
          </a>
          {% endif %}
          {% if youtube and youtube != '#' %}
          <a href="{{ youtube }}" target="_blank" rel="noopener" class="inline-flex items-center justify-center w-7 h-7 rounded-full bg-white/10 hover:bg-white/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-white"><path d="M23.5 6.2s-.23-1.66-.95-2.39c-.91-.95-1.93-.95-2.4-1C16.8 2.5 12 2.5 12 2.5h0s-4.8 0-8.15.31c-.47.05-1.49.05-2.4 1C.73 4.54.5 6.2.5 6.2S.27 8.1.27 9.98v1.99C.27 13.85.5 15.75.5 15.75s.23 1.66.95 2.39c.91.95 2.1.92 2.64 1.02 1.92.19 7.91.31 7.91.31s4.8 0 8.15-.31c.47-.05 1.49-.05 2.4-1 .72-.73.95-2.39.95-2.39s.23-1.9.23-3.78V9.98c0-1.88-.23-3.78-.23-3.78ZM9.75 13.5V7.92l6 2.79-6 2.79Z"/></svg>
          </a>
          {% endif %}
          {% if instagram and instagram != '#' %}
          <a href="{{ instagram }}" target="_blank" rel="noopener" class="inline-flex items-center justify-center w-7 h-7 rounded-full bg-white/10 hover:bg-white/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-white"><path d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5Zm0 2a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3H7Zm5 3.5a5.5 5.5 0 1 1 0 11 5.5 5.5 0 0 1 0-11Zm0 2a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7Zm5.75-.75a.75.75 0 1 1 0 1.5.75.75 0 0 1 0-1.5Z"/></svg>
          </a>
          {% endif %}
          {% if xlink and xlink != '#' %}
          <a href="{{ xlink }}" target="_blank" rel="noopener" class="inline-flex items-center justify-center w-7 h-7 rounded-full bg-white/10 hover:bg-white/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 text-white"><path d="M3 3h3.7L13 12.1 20.2 3H21l-6.8 9.3L21 21h-3.7L11 13.9 3.8 21H3l6.8-9.3L3 3Z"/></svg>
          </a>
          {% endif %}
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</footer>