<section class="product-listing">
  {% if context.products | length > 0 %}
  {%set translateTitle=t(context.page.handle) %}
  {%ui "header-page.njk",bg_color="bg-white", title=translateTitle %}
  <div class="container flex  flex-col gap-10 pt-4">
    <div class="flex  flex-col md:gap-8 gap-4 ">
      <!-- {%ui "filter.njk" %} -->
      <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4  md:gap-x-6 md:gap-y-7 gap-x-[9px] gap-y-2 ">
        {% for product in context.products %}
        {%ui "product-card.njk" ,product=product %}
        {% endfor %}
      </div>
    </div>
    {%ui "pagination.njk" %}
  </div>
  {% else %}
  {%ui "empty.njk" , BtnText="تصفح اقسام المنتجات",BtnUrl="/collections"%}
  {% endif %}
</section>