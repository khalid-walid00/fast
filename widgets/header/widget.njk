<!-- Header & Interactive Modals Controller -->
<div class="sticky top-0 z-50 bg-white border-b border-[#E9E9E9]">
    <header class="container py-1.5 md:py-4 flex items-center gap-[42px] justify-between">
        <div class="flex items-center gap-9">
            <img src="{{ globals.app.logo.fileUrl }}" alt="logo" class="md:w-[50px] w-11  ">
            <div class="relative hidden md:flex items-center w-full min-w-0">
                <nav class="flex items-center justify-center gap-x-5 xl:gap-x-7">
                    {% set items = widget.data.header_menu or [] %}
                    {% for item in items %}
                    {% if loop.index0 < 6 %} <a href="{{ item.url | default('#') }}"
                        class="text-gray-700 hover:text-black font-semibold whitespace-nowrap transition-colors duration-200">
                        {{ item.title | default('بدون عنوان') }}</a>
                        {% endif %}
                        {% endfor %}
                        {% if items | length > 6 %}
                        <div class="relative group flex items-center">
                            <button
                                class="w-8 h-8 inline-flex items-center justify-center rounded-md hover:bg-gray-100 text-gray-700 transition-colors duration-200"
                                aria-label="المزيد">
                                <span class="material-symbols-outlined">
                                    more_horiz
                                </span>
                            </button>
                            <div
                                class="absolute top-full mt-2 right-0 bg-white border border-gray-200 rounded-lg shadow-lg py-2 z-50 min-w-[12rem] opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                                {% for item in items %}
                                {% if loop.index0 >= 6 %}
                                <a href="{{ item.url | default('#') }}"
                                    class="block font-semibold px-4 py-2  text-gray-600 hover:bg-gray-50 whitespace-nowrap">{{
                                    item.title | default('بدون عنوان') }}</a>
                                {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                        {% endif %}
                </nav>
            </div>
        </div>
        <div class=" items-center hidden xl:flex  bg-mainColor gap-[14px]  rounded-lg py-[5px] pr-4 pl-[6px]">
            <span class="material-symbols-outlined text-xl text-white flex items-center justify-center w-5 h-5">
                mystery
            </span>
            <input type="text" placeholder="ابحث عن منتج"
                class=" placeholder-white px-5 py-[2px] border border-[#C5C5C7] focus:outline-none rounded-lg  bg-white text-mainColor ">
        </div>
        <div class=" items-center hidden xl:flex gap-5 ">
            <div class="flex items-center rounded-full bg-black gap-2 py-[7px] px-2">
                <span class="font-semibold text-nowrap text-white text-xs">1.00 ج.م</span>
                <div class="relative flex items-center">
                    <span class=""></span>
                    <span class="material-symbols-outlined text-xl text-white flex items-center justify-center w-5 h-5">
                        shopping_cart
                    </span>
                </div>
            </div>
            <div class="flex items-center rounded-full bg-[#CCCCCC] gap-2 py-[7px] px-2">
                <span class="font-semibold text-dark text-nowrap text-xs">التسجيل/ تسجيل الدخول</span>
                <span class="material-symbols-outlined text-xl text-dark flex items-center justify-center w-5 h-5">
                    person
                </span>
            </div>
        </div>
        <div class=" max-xl:flex hidden items-center gap-4">
            <span class="material-symbols-outlined text-xl text-black  flex items-center justify-center w-5 h-5">
                mystery
            </span>
        <div class=" relative flex items-center">
            <span class=" rounded-full bg-mainColor absolute -top-1 -right-1 text-[10px] font-bold flex items-center justify-center w-3 h-3">0</span>
            <span class="material-symbols-outlined text-xl text-black flex items-center justify-center w-5 h-5">
                shopping_cart
            </span>
        </div>
            <span class="material-symbols-outlined text-xl text-black flex items-center justify-center w-5 h-5">
                menu
            </span> 
        </div>
    </header>
</div>

{{widget.data.header_menu | json }}


