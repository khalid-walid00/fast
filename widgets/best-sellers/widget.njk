<section class="py-16 bg-gray-50">
  <div class="container">
    <style>
      /* Ensure mobile tabs have spacing and correct width */
      .best-tabs-swiper .swiper-slide { width: auto !important; padding-inline-start: 12px; }
      .best-tabs-swiper .swiper-wrapper { align-items: center; }
    </style>
    <div class="section-title-container">
      <h2 class="section-title no-underline">{{ widget.data.title | default('الأفضل مبيعًا هذا الأسبوع') }}</h2>
    </div>
    <div class="mb-8">
      <!-- Mobile: tabs as swiper -->
      <div class="md:hidden swiper best-tabs-swiper tabs-underline">
        <div class="swiper-wrapper">
          <div class="swiper-slide pr-3" style="width:auto"><button class="tab-btn tab-active">الكل</button></div>
          <div class="swiper-slide pr-3" style="width:auto"><button class="tab-btn">كتـب</button></div>
          <div class="swiper-slide pr-3" style="width:auto"><button class="tab-btn">كراسي</button></div>
          <div class="swiper-slide pr-3" style="width:auto"><button class="tab-btn">سراير</button></div>
          <div class="swiper-slide pr-3" style="width:auto"><button class="tab-btn">طاولات</button></div>
          <div class="swiper-slide pr-3" style="width:auto"><button class="tab-btn">أذرع كراسي</button></div>
          <div class="swiper-slide pr-3" style="width:auto"><button class="tab-btn">ديكورات</button></div>
        </div>
      </div>
      <!-- Desktop: simple flex row -->
      <div class="hidden md:flex md:flex-wrap overflow-x-auto no-scrollbar whitespace-nowrap md:whitespace-normal justify-start items-center gap-3 sm:gap-6 text-base sm:text-lg font-bold tabs-underline">
        <button class="tab-btn tab-active">الكل</button>
        <button class="tab-btn">كتـب</button>
        <button class="tab-btn">كراسي</button>
        <button class="tab-btn">سراير</button>
        <button class="tab-btn">طاولات</button>
        <button class="tab-btn">أذرع كراسي</button>
        <button class="tab-btn">ديكورات</button>
      </div>
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4 lg:gap-6">
      {% for product in widget.data.products_collection or [] %}
      {%ui "product-card.njk" ,product=product %}
      {% endfor %}
    </div>
  </div>
</section>



