<section class="md:py-16 py-6 bg-gray-50">
  <div class="container flex flex-col md:gap-9 gap-5">
    
    <div class="flex flex-col md:gap-5 gap-3">
      <div class="section-title-container">
        <h2 class="font-bold text-[32px] text-secondary">
          {{ widget.data.title | default('الأفضل مبيعًا هذا الأسبوع') }}
        </h2>
      </div>

<div class="flex items-center md:gap-10 gap-3 overflow-x-auto scrollbar-hide">
          <!-- Categories Buttons -->
      {% for cat in ['طاولات','كراسي','سراير','مكاتب','ديكور','إضاءة','خزائن','أذرع','كراسي','سراير','مكاتب','ديكور','إضاءة','خزائن','أذرع'] %}
          <div class=" py-1">
            <button
              class="py-1 px-1 md:text-xl text-sm font-semibold border-b border-primary  transition 
                     min-w-[54px] text-secondary/50 max-w-[111px] truncate text-center">
              {{ cat }}
            </button>
          </div>
          {% endfor %}
      </div>
    </div>   

    <!-- Products Grid -->
     <div class="flex flex-col gap-5 md:gap-12 items-center justify-center">
    <div class="grid w-full grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 md:gap-x-6 md:gap-y-7 gap-x-[9px] gap-y-2">
      {% for product in widget.data.products_collection or [] %}
        {% ui "product-card.njk", product=product %}
      {% endfor %}
    </div>
    <a class=" flex items-center gap-3 bg-secondary text-white py-3 md:px-[76px] px-[29px] rounded-lg" href="/collections">
      <span class=" text-xs font-semibold">عرض المزيد</span>
      <span class="material-symbols-outlined text-xl">
        arrow_left_alt
        </span>
    </a>
  </div>
  </div>
</section>
