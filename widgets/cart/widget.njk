<main v-cloak  class="transition-all duration-300 pt-4">
  <div class="container py-4">

    <!-- محتوى السلة -->
    <div v-show="globals?.cart?.items?.length > 0">
      <!-- شريط التقدم نحو التوصيل المجاني (مع أيقونة السيارة) -->
      <div class="bg-white rounded-lg border border-gray-200 p-5 mb-6">
        <div class="flex items-center justify-start w-full text-xs md:text-sm text-gray-700 mb-2 text-right">
          <span class="font-bold">
            {% set thr = settings.free_shipping_threshold or 800 %}
            أضف <span class="text-[#F59A57]">{{ thr }} ج.م</span> إلى مشترياتك لتحصل على الشحن مجانًا!
          </span>
        </div>
        <div class="relative w-full">
          <!-- المسار -->
          <div class="h-2 bg-gray-100 rounded-full w-full"></div>
          <!-- التقدم من اليمين لليسار -->
          <div class="absolute inset-y-0 right-0 h-2 bg-[#F59A57] rounded-full" style="width:50%"></div>
          <!-- مقبض بأيقونة الشحن -->
          <div class="absolute -top-3" style="right: calc(50% - 16px)">
            <div class="rounded-full h-8 w-8 border border-[#F59A57] bg-white flex items-center justify-center">
              <span class="material-symbols-outlined text-base transform -scale-x-100 text-[#F59A57]">local_shipping</span>
            </div>
          </div>
        </div>
      </div>
      
      <!-- ملخص الطلب -->
      <div class="lg:grid lg:grid-cols-3 lg:gap-8">
        <!-- المنتجات - نفس كروت التصميم -->
        <div class="lg:col-span-2 mb-8 lg:mb-0 space-y-4">
          <template v-for="item in globals?.cart?.items" :key="item._id">
            <div class="bg-white p-4 rounded-lg shadow-sm flex items-center gap-4 border border-gray-200">
              <img :src="item?.productData?.image?.fileUrl" :alt="item?.productData?.title" class="w-20 h-20 object-cover rounded-md">
              <div class="flex-grow min-w-0">
                <h3 class="font-semibold text-gray-800 truncate" v-text="item?.productData?.title"></h3>
                <template v-if="item?.variantData?.options?.length">
                  <div class="text-sm text-gray-500">
                    <template v-for="opt in item?.variantData?.options" :key="opt?._id">
                      <span class="inline-block mr-1"><span v-text="opt?.option?.name"></span>: <span v-text="opt?.label"></span></span>
                    </template>
                  </div>
                </template>
              </div>
              <p class="font-bold text-lg text-[#F59A57] w-24 text-center">
                <span v-text="item?.price || item?.variantData?.price || 0"></span>
                <span v-text="globals?.currency?.currencySymbol"></span>
              </p>
              <div class="flex items-center border border-gray-200 rounded-md">
                <button class="px-3 py-1 text-gray-600 hover:bg-gray-100 rounded-r-md" @click="decreaseCartItem(item._id, item.quantity)">-</button>
                <span class="px-4 py-1 text-gray-800 font-semibold" v-text="item.quantity"></span>
                <button class="px-3 py-1 text-gray-600 hover:bg-gray-100 rounded-l-md" @click="increaseCartItem(item._id, item.quantity)">+</button>
              </div>
              <button class="text-gray-400 hover:text-red-500" @click="clearCartItem(item._id)">
                <span class="material-symbols-outlined">delete</span>
              </button>
            </div>
          </template>
        </div>
        
        <!-- ملخص السعر - قسم أكبر وأجمل -->
        <div class="lg:col-span-1">
          <div class="bg-white p-6 rounded-lg shadow-sm sticky top-8 border-t-4 border-[#F59A57]">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">ملخص الطلب</h2>
            <div class="space-y-4 text-gray-700">
              <div class="flex justify-between">
                <span>المجموع الفرعي:</span>
                <span class="font-semibold">
                  <span v-text="globals?.cart?.items?.reduce((sum, item) => {
                    const p = item?.price || item?.variantData?.price || 0;
                    return sum + (p * (item?.quantity || 0));
                  }, 0) || 0"></span>
                  <span v-text="globals?.currency?.currencySymbol"></span>
                </span>
              </div>
              <div class="flex justify-between">
                <div>
                  <span>الشحن:</span>
                  <a href="/collections" class="text-sm text-[#F59A57] hover:underline block">تغيير عنوان الشحن</a>
                </div>
                <span class="font-semibold">
                  <span v-text="globals?.cart?.shippingPrice || 0"></span>
                  <span v-text="globals?.currency?.currencySymbol"></span>
                </span>
              </div>
              <div class="border-t border-gray-200 my-4"></div>
              <div class="flex justify-between text-xl font-bold text-gray-900">
                <span>الإجمالي</span>
                <span>
                  <span v-text="(globals?.cart?.totalPrice ?? 0)"></span>
                  <span v-text="globals?.currency?.currencySymbol"></span>
                </span>
              </div>
            </div>
            <button class="w-full mt-6 bg-[#F59A57] text-white font-bold py-3 rounded-lg hover:bg-orange-500 transition-colors duration-300"
                    :disabled="globalLoading.checkout" @click="checkout()">
              اتمام الطلب
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- الحالة: السلة فاضية -->
    <div v-show="!globals?.cart || !globals?.cart?.items || globals?.cart?.items?.length === 0"
         class="max-w-2xl mx-auto text-center">
      <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
        <div class="mx-auto h-20 w-20 rounded-full bg-gray-100 flex items-center justify-center text-gray-500 mb-6">
          <svg class="h-10 w-10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 7h18M3 7l2 12a2 2 0 0 0 2 2h10a2 2 0 0 1 1.818 0Z"/>
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6M9 16h4"/>
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 font-cairo mb-3">سلة المشتريات فارغة</h1>
        <p class="text-gray-600 font-cairo mb-8">ابدأ بإضافة منتجاتك الآن واستمتع بتجربة تسوق مميزة</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/collections" class="inline-flex items-center justify-center gap-3 bg-white text-gray-800 rounded-xl px-8 py-4 font-bold text-lg shadow-sm hover:shadow-md border border-gray-200 hover:border-gray-300 hover:bg-gray-50 font-cairo transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            تصفح المجموعات
          </a>
          <a href="/latest" class="inline-flex items-center justify-center gap-3 bg-[#003033] hover:bg-[#004d4d] text-white rounded-xl px-8 py-4 font-bold text-lg shadow-md hover:shadow-lg font-cairo transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M12 5l7 7-7 7" />
            </svg>
            متابعة التسوق
          </a>
        </div>
      </div>
    </div>
  </div>
</main>

<!-- منتجات قد تهمك - بنفس تصميم الكروت -->
<section class="container pb-12" v-show="(globals?.latest?.items && globals?.latest?.items.length) || (globals?.products?.items && globals?.products?.items.length)">
  <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">منتجات قد تهمك</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <template v-for="p in ((globals?.latest?.items && globals?.latest?.items.length ? globals?.latest?.items : globals?.products?.items) || []).slice(0, 8)" :key="p?._id">
      <div class="bg-white rounded-lg shadow-sm overflow-hidden text-center group border">
        <div class="relative">
          <a :href="'/product/' + (p?.slug || '')">
            <img :src="p?.images?.[0]?.fileUrl || 'https://placehold.co/300x300/E2E8F0/A0AEC0?text=Chair'" :alt="p?.title" class="w-full h-56 object-cover">
          </a>
        </div>
        <div class="p-4">
          <h3 class="font-semibold text-lg text-gray-800 truncate" v-text="p?.title"></h3>
          <p class="text-sm text-gray-500 mb-2" v-text="p?.category?.title || ''"></p>
          <div class="flex justify-center items-baseline gap-2 mb-4">
            <span class="text-xl font-bold text-[#F59A57]"><span v-text="p?.pricing?.price || 0"></span> <span v-text="globals?.currency?.currencySymbol"></span></span>
            <template v-if="p?.pricing?.compareAtPrice && p?.pricing?.compareAtPrice > (p?.pricing?.price || 0)">
              <span class="text-sm text-gray-400 line-through"><span v-text="p?.pricing?.compareAtPrice"></span> <span v-text="globals?.currency?.currencySymbol"></span></span>
            </template>
          </div>
          <button class="w-full bg-[#F59A57] text-white font-bold py-2 rounded-lg hover:bg-orange-500 transition-colors duration-300"
                  @click="addProductToCart(p?._id, 1, [])" :disabled="loading.addToCart">
            إضافة للسلة
          </button>
        </div>
      </div>
    </template>
  </div>
</section>
  