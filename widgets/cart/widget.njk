<main v-cloak class="transition-all duration-300 pt-4">
  <div class="container py-4">
    <!-- Breadcrumbs -->
    <nav class="text-base md:text-lg text-gray-600 mb-4" aria-label="Breadcrumb">
      <ol class="list-none p-0 inline-flex">
        <li class="flex items-center">
          <a href="/" class="hover:text-gray-700">الرئيسية</a>
          <span class="material-symbols-outlined mx-2 text-2xl">/</span>
        </li>
        <li class="flex items-center">
          <span class="text-gray-800 font-semibold">السلة</span>
        </li>
      </ol>
    </nav>

    <!-- محتوى السلة -->
    <div v-show="globals?.cart?.items?.length > 0">
      <!-- ملخص الطلب -->
      <div class="lg:grid lg:grid-cols-3 lg:gap-0">
        <!-- المنتجات - نفس كروت التصميم -->
        <div class="lg:col-span-2 mb-8 lg:mb-0 space-y-4 lg:pl-4">
          <!-- شريط التقدم نحو التوصيل المجاني (محصور بعرض عمود المنتجات) -->
          <div class="bg-white rounded-lg border-strok border-[1.5px] p-4" style="border-color:#D9D9D940">
            <div class="flex items-center justify-start w-full text-xs md:text-sm text-gray-700 mb-2 text-right">
              <span class="font-bold">
                {% set thr = settings.free_shipping_threshold or 800 %}
                أضف <span class="text-primary">{{ thr }} ج.م</span> إلى مشترياتك لتحصل على الشحن مجانًا!
              </span>
            </div>
            <div class="relative w-full mt-1">
              <div class="rounded-full w-full" style="height:6px; background:#F4F4F4"></div>
              <div class="absolute inset-y-0 bg-primary right-0 rounded-full" style="height:6px; width:50%;"></div>
              <div class="absolute top-1/2 -translate-y-1/2" style="right: calc(50% - 10px)">
                <div class="rounded-full bg-white border bordrer-primary flex items-center justify-center"
                  style="width:20px; height:20px;">
                  <span class="bg-primary" style="display:block; width:8px; height:8px; border-radius:9999px;"></span>
                </div>
              </div>
            </div>
          </div>
          <div class="rounded-lg  border-strok border-[1.5px] bg-white" style="border-color:#D9D9D940">
            <template v-for="(item, i) in globals?.cart?.items" :key="item._id">
              <div class="p-4 flex items-center gap-4"
                :class="{'border-b-[1.5px]': i !== (globals?.cart?.items?.length - 1)}">
                <img :src="item?.productData?.image?.fileUrl" :alt="item?.productData?.title"
                  class="w-20 h-20 object-cover rounded-md">
                <div class="flex-grow min-w-0">
                  <h3 class="font-medium text-secondary truncate text-sm" v-text="item?.productData?.title"></h3>

                  <template v-if="item?.variantData?.options?.length">
                    <div class="flex flex-col gap-1">
                      <template v-for="(option, idx) in item?.variantData?.options" :key="idx">
                        <div class="flex items-center gap-2">
                          <span class="text-[#7C7C7C] text-xs" v-text="option?.option?.name"></span>
                          <span class="text-xl font-bold">:</span>
                          <span class="text-[#7C7C7C] text-xs" v-text="option?.label"></span>
                        </div>
                      </template>
                    </div>
                  </template>

                </div>
                <div class="font-bold text-lg text-primary w-24 text-center flex items-center gap-2">
                  <div  v-show="item.totalPrice > 0" class="flex items-center gap-1">
                    <span v-text="item.totalPrice" class="text-primary text-sm font-semibold"></span>
                    <span v-text="globals?.currency?.currencySymbol"></span>
                  </div>
                <div  v-show="item.totalSavings > 0" class="flex items-center gap-1">
                    <span class="text-[#7C7C7C] text-xs font-semibold line-through"
                      v-text="item.totalCompareAtPrice"></span>
                    <span  v-text="globals?.currency?.currencySymbol"></span>
                  </div>
                </div>
                <div class="flex items-center gap-1.5">
                  <button
                    class="w-6 h-6 text-base text-gray-600 hover:bg-gray-50 material-symbols-outlined border border-gray-300 rounded flex items-center justify-center"
                    @click="decreaseCartItem(item._id, item.quantity)">remove</button>
                  <span class="px-2  text-secondary text-sm font-semibold select-none" v-text="item.quantity"></span>
                  <button
                    class="w-6 h-6 text-gray-600 text-base hover:bg-gray-50 material-symbols-outlined border border-gray-300 rounded flex items-center justify-center"
                    @click="increaseCartItem(item._id, item.quantity)">add</button>
                </div>
                <button class="text-gray-400 hover:text-red-500 self-start" @click="clearCartItem(item._id)">
                  <span class="material-symbols-outlined">delete</span>
                </button>
              </div>
            </template>
          </div>
        </div>

        <!-- ملخص السعر - قسم أكبر وأجمل -->
        <div class="lg:col-span-1">
          <div class="bg-white p-6 lg:pl-8 rounded-lg shadow-sm sticky top-8 border" style="border-color:#F59A57">
            <div class="space-y-4 text-gray-700">
              <div class="flex justify-between">
                <span>المجموع الفرعي:</span>
                <span class="font-semibold">
                  <span v-text="globals?.cart?.items?.reduce((sum, item) => {
                    const p = item?.price || item?.variantData?.price || 0;
                    return sum + (p * (item?.quantity || 0));
                  }, 0) || 0"></span>
                  <span v-text="globals?.currency?.currencySymbol"></span>
                </span>
              </div>
              <div class="border-b" style="border-color:#D9D9D9"></div>
              <div class="flex justify-between">
                <div>
                  <span>الشحن:</span>
                  <a href="/collections" class="text-sm text-primary hover:underline block">تغيير عنوان الشحن</a>
                </div>
                <span class="font-semibold">
                  <span v-text="globals?.cart?.shippingPrice || 0"></span>
                  <span v-text="globals?.currency?.currencySymbol"></span>
                </span>
              </div>
              <div class="border-b" style="border-color:#D9D9D9"></div>
              <div class="flex justify-between text-xl font-bold text-gray-900">
                <span>الإجمالي</span>
                <span>
                  <span v-text="(globals?.cart?.totalPrice ?? 0)"></span>
                  <span v-text="globals?.currency?.currencySymbol"></span>
                </span>
              </div>
            </div>
            <button
              class="w-full min-h-[52px] mt-6 bg-primary text-white font-bold py-3 rounded-lg hover:bg-primary transition-colors duration-300"
              :disabled="globalLoading.checkout" @click="checkout()">
            <span v-show="!globalLoading.checkout" class=" text-base font-semibold">اتمام الطلب</span>
              <template v-if="globalLoading.checkout">
                <div class="flex justify-center">
                  {%ui "loading.njk" %}
                </div>
              </template>
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- الحالة: السلة فاضية -->
    <div v-show="!globals?.cart || !globals?.cart?.items || globals?.cart?.items?.length === 0"
      class="mx-auto text-center">
      <div class="flex items-center justify-center flex-col gap-10 py-16">
        <div class="flex flex-col items-center gap-8">
          <a aria-label="latestproduct" href="/collection/all">
            <span style="font-size: 140px;" class="material-symbols-outlined text-gray-400">
              shopping_cart_off
            </span>
          </a>
          <div class="flex flex-col items-center">
            <h1 class="text-3xl font-bold text-gray-900">عربة التسوق فارغة</h1>
            <p class="text-lg text-gray-500 mt-2">أضف بعض المنتجات إلى عربتك للحصول على تجربة تسوق مميزة معنا!</p>
          </div>
        </div>
        <a aria-label="showproduct" href="/collection/all"
          class="hover:scale-[1.02] min-w-[260px] text-base md:text-lg font-bold transition-all duration-300 flex justify-center items-center py-4 px-8 bg-primary text-white rounded-lg shadow-md">
          متابعة التسوق
        </a>
      </div>
    </div>
  </div>
</main>

<!-- منتجات قد تهمك - بنفس تصميم الكروت -->
<section class="container pb-12"
  v-show="(globals?.latest?.items && globals?.latest?.items.length) || (globals?.products?.items && globals?.products?.items.length)">
  <div class="section-title-container">
    <h2 class="section-title">منتجات قد تهمك</h2>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <template
      v-for="p in ((globals?.latest?.items && globals?.latest?.items.length ? globals?.latest?.items : globals?.products?.items) || []).slice(0, 8)"
      :key="p?._id">
      <div class="bg-white rounded-lg shadow-sm overflow-hidden text-center group border">
        <div class="relative">
          <a :href="'/product/' + (p?.slug || '')">
            <img :src="p?.images?.[0]?.fileUrl || 'https://placehold.co/300x300/E2E8F0/A0AEC0?text=Chair'"
              :alt="p?.title" class="w-full h-56 object-cover">
          </a>
        </div>
        <div class="p-4">
          <h3 class="font-semibold text-lg text-gray-800 truncate" v-text="p?.title"></h3>
          <p class="text-sm text-gray-500 mb-2" v-text="p?.category?.title || ''"></p>
          <div class="flex justify-center items-baseline gap-2 mb-4">
            <span class="text-xl font-bold text-primary"><span v-text="p?.pricing?.price || 0"></span> <span
                v-text="globals?.currency?.currencySymbol"></span></span>
            <template v-if="p?.pricing?.compareAtPrice && p?.pricing?.compareAtPrice > (p?.pricing?.price || 0)">
              <span class="text-sm text-gray-400 line-through"><span v-text="p?.pricing?.compareAtPrice"></span> <span
                  v-text="globals?.currency?.currencySymbol"></span></span>
            </template>
          </div>
          <button
            class="w-full bg-primary text-white font-bold py-2 rounded-lg hover:bg-primary transition-colors duration-300"
            @click="addProductToCart(p?._id, 1, [])" :disabled="loading.addToCart">
            إضافة للسلة
          </button>
        </div>
      </div>
    </template>
  </div>
</section>