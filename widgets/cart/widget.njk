<section v-cloak >
  <div class="container md:py-[88px] pt-6">
    <!-- Breadcrumbs -->
     
    <div class="flex flex-col md:gap-10 gap-5">
      <nav class="text-base md:text-lg text-gray-600" aria-label="Breadcrumb">
        <ol class="list-none p-0 inline-flex">
          <li class="flex items-center">
            <a href="/" class="hover:text-gray-700 text-xl font-light">{{t("home")}}</a>
            <span class="material-symbols-outlined mx-1 text-xl ">/</span>
          </li>
          <li class="flex items-center">
            <span class=" text-secondary font-medium text-xl ">{{t('cart')}}</span>
          </li>
        </ol>
      </nav>

      <!-- محتوى السلة -->
      <div v-show="globals?.cart?.items?.length > 0">
        <!-- ملخص الطلب -->
        <div class="grid relative lg:grid-cols-3  grid-cols-1 lg:gap-[46px] md:gap-7 gap-5">
          <!-- المنتجات - نفس كروت التصميم -->
          <div class="lg:col-span-2 flex flex-col md:gap-6 gap-5">
            <!-- شريط التقدم نحو التوصيل المجاني (محصور بعرض عمود المنتجات) -->
            <div class="bg-white rounded-lg border-strok border-[1.5px] px-4 py-6 flex flex-col gap-2">
              <div class="flex items-center justify-start w-full text-xs md:text-sm text-gray-700 text-right">
                <span class="font-bold">
                  {% set thr = settings.free_shipping_threshold or 800 %}
                  {{ t('add_150_for_free_shipping') }}
                </span>
              </div>
              <div class="relative w-full">
                <div class="rounded-full w-full" style="height:6px; background:#F4F4F4"></div>
                <div class="absolute inset-y-0 bg-primary right-0 rounded-full" style="height:6px; width:50%;"></div>
                <div class="absolute top-1/2 -translate-y-1/2" style="right: calc(50% - 10px)">
                  <div class="rounded-full bg-white border bordrer-primary flex items-center justify-center"
                    style="width:20px; height:20px;">
                    <span class="bg-primary" style="display:block; width:8px; height:8px; border-radius:9999px;"></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="rounded-lg  border-strok border-[1.5px] bg-white">
              <template v-for="(item, i) in globals?.cart?.items" :key="item._id">
                <div>
                  <div class="md:p-4 p-3 max-md:pr-2.5 flex md:items-start gap-4 border-b border-strok pb-4">
                    <div class="flex gap-4 flex-1 flex-col md:flex-row">
                      <img :src="item?.productData?.image?.fileUrl" :alt="item?.productData?.title"
                        class="w-[100px] h-[100px] object-cover rounded-lg">
                      <div class="flex flex-col gap-2 flex-1">
                        <div class="flex items-start justify-between">
                          <h3 class="font-medium text-secondary text-base" v-text="item?.productData?.title"></h3>
                          <button class="text-gray-400 hover:text-red-500" @click="clearCartItem(item._id)">
                            <span class="material-symbols-outlined text-[24px]">delete</span>
                          </button>
                        </div>
                        <template v-if="item?.variantData?.options?.length">
                          <div class="flex flex-col gap-1">
                            <template v-for="(option, idx) in item?.variantData?.options" :key="idx">
                              <div class="flex items-center gap-0.5">
                                <span class="text-[#7C7C7C] text-sm" v-text="option?.option?.name"></span>
                                <span class="text-sm">:</span>
                                <span class="text-[#7C7C7C] text-sm" v-text="option?.label"></span>
                              </div>
                            </template>
                          </div>
                        </template>
                        <div class="flex flex-col gap-2 mt-2">
                          <div class="flex items-center gap-2">
                            <div v-show="item.totalPrice > 0" class="flex text-secondary text-lg items-center gap-1">
                              <span v-text="item.totalPrice" class="font-semibold"></span>
                              <span v-text="globals?.currency?.currencySymbol"></span>
                            </div>
                            <div v-show="item.totalSavings > 0"
                              class="flex items-center line-through text-sm gap-1 text-[#7C7C7C]">
                              <span class="font-semibold" v-text="item.totalCompareAtPrice"></span>
                              <span v-text="globals?.currency?.currencySymbol"></span>
                            </div>
                          </div>
                          <div class="flex items-center justify-end gap-2 mt-2">
                            <button
                              class="w-8 h-8 text-base text-gray-600 hover:bg-gray-50 material-symbols-outlined border border-gray-300 rounded flex items-center justify-center"
                              @click="decreaseCartItem(item._id, item.quantity)">remove</button>
                            <span class="px-3 text-secondary text-base font-semibold select-none"
                              v-text="item.quantity"></span>
                            <button
                              class="w-8 h-8 text-gray-600 text-base hover:bg-gray-50 material-symbols-outlined border border-gray-300 rounded flex items-center justify-center"
                              @click="increaseCartItem(item._id, item.quantity)">add</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div :class="i !== globals?.cart?.items?.length - 1 ? 'hidden' : 'hidden'"
                    class="w-full flex "></div>
                </div>
              </template>
            </div>
          </div>

          <!-- ملخص السعر - قسم أكبر وأجمل -->
          <div class="lg:col-span-1 ">
            <div
              class="bg-white md:py-6 py-5 md:px-4 px-[10px]  flex flex-col  sticky top-20 gap-6 rounded-lg  border-[1.5px] border-strok">
              <div class="flex flex-col gap-4 text-gray-700">
                <div class="flex justify-between pb-4 border-b border-strok">
                  <span class="font-semibold text-black">{{t('order_total')}}</span>
                </div>
                <div class="flex justify-between">
                  <span>{{ t('subtotal') }}</span>
                  <div class="flex items-center gap-0.5">
                    <span v-text="globals?.cart?.totalPrice || 0"></span>
                    <span v-text="globals?.currency?.currencySymbol"></span>
                  </div>
                </div>
                <div class="flex justify-between">
                  <span>{{ t('discount') }}</span>
                  <div class="flex items-center gap-1">
                    <template v-if="globals?.cart?.totalSavings > 0">
                      <span
                        v-text="Math.round((globals?.cart?.totalSavings / globals?.cart?.totalCompareAtPrice) * 100) + '%'"></span>
                    </template>
                    <template v-else>
                      <span>0%</span>
                    </template>
                  </div>
                </div>

                <div class="flex justify-between">
                  <span>{{ t('tax') }}</span>
                  <div class="flex items-center gap-0.5">
                    <span v-text="globals?.cart?.shippingPrice || 0"></span>
                    <span v-text="globals?.currency?.currencySymbol"></span>
                  </div>
                </div>
                <div class="flex justify-between text-xl font-semibold text-gray-900 pt-3 border-t border-strok">
                  <span>{{ t('order_total') }}</span>
                  <div class="flex items-center gap-0.5">
                    <span v-text="(globals?.cart?.totalPrice ?? 0)"></span>
                    <span v-text="globals?.currency?.currencySymbol"></span>
                  </div>
                </div>
              </div>
              <button
                class="w-full min-h-[52px]  bg-primary text-white font-bold py-3 rounded-lg hover:bg-primary transition-colors duration-300"
                :disabled="globalLoading.checkout" @click="checkout()">
                <span v-show="!globalLoading.checkout" class=" text-base font-semibold">{{t('complete_order')}}</span>
                <template v-if="globalLoading.checkout">
                  <div class="flex justify-center">
                    {%ui "loading.njk" %}
                  </div>
                </template>
              </button>
            </div>
          </div>
        </div>
      </div>
    <!-- الحالة: السلة فاضية -->
    <div v-show="!globals?.cart || !globals?.cart?.items || globals?.cart?.items?.length === 0"
      class="mx-auto text-center">
      <div class="flex items-center justify-center flex-col md:gap-14 gap-10">
        <div class="flex flex-col items-center md:gap-10 gap-6">
          <a aria-label="latestproduct" href="/collection/all">
            <span  class="material-symbols-outlined text-gray  md:text-[200px] text-[116px] ">
              shopping_cart_off
            </span>
          </a>
          <div class="flex flex-col items-center">
            <h1 class="text-xl md:text-2xl font-semibold text-secondary">{{t('empty_cart')}}</h1>
            <p class="text-gray">{{t('add_products_message')}}</p>
          </div>
        </div>
        <a aria-label="showproduct" href="/collection/all"
          class="hover:scale-[1.02] h-[50px] md:min-w-[502px] text-sm font-medium transition-all duration-300 flex justify-center items-center py-3 px-8 bg-primary text-white rounded-lg">
          {{ t('continue_shopping') }}
        </a>
      </div>
    </div>
  </div>

  </div>
</section>

